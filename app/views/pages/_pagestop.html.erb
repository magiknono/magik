  <!-- Hero header: will stick at the top -->
  <div class="hero-head">
    <header class="nav">
      <div class="container">
        <div class="nav-left">
          <a class="nav-item">
            <%= image_tag("logo.png") %>
          </a>
        </div>
        <span class="nav-toggle">
          <span></span>
          <span></span>
          <span></span>
        </span>
        <div class="nav-right nav-menu">
          <a class="nav-item is-active">
            Home
          </a>
          <%= link_to "Styleguide", pages_styleguide_path, class: "nav-item" %>

          <%= link_to "Mockups", pages_mockups_path, class: "nav-item" %>

          <span class="nav-item">
            <a href="http://guides.rubyonrails.org/" class="button is-primary ">
              <span class="icon">
                <i class="fa fa-code"></i>
              </span>
              <span>rails 5</span>
