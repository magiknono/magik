    <div class="container has-text-centered">
      <h1 class="title">
        Pages#mockups
      </h1>
      <h2 class="subtitle">
        Find me in app/views/pages/mockups.html.erb
      </h2>
    </div>
  </div>

  <!-- Hero footer: will stick at the bottom -->
  <div class="hero-foot">
    <nav class="tabs is-boxed">
      <div class="container">
        <ul>
          <li class="is-active"><a>Overview</a></li>
